{
    "files.exclude": {
        "**/*.js": {
            "when": "$(basename).ts"
        },
        "**/*.map": {
            "when": "$(basename).map"
        },
        "**/*.d.ts": {
            "when": "$(basename).ts"
        }
    },    
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true
    }
}